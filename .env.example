# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
# Получите токен у @BotFather в Telegram

# Environment
NODE_ENV=development
LOG_LEVEL=info

# Health Check Server
HEALTH_CHECK_PORT=3000

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321
SUPPORT_CHAT_ID=

# Google Sheets Integration
GOOGLE_SHEETS_ID=your_google_spreadsheet_id
GOOGLE_SHEETS_RANGE=Sheet1!A:E
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"

# Cache Update Schedule (cron format)
# Default: every 6 hours
CACHE_UPDATE_SCHEDULE=0 */6 * * *

# Email Configuration (SMTP)
# Примеры для популярных сервисов:
# Gmail: smtp.gmail.com:587 (используйте пароль приложения)
# Yandex: smtp.yandex.ru:465 (SSL) или smtp.yandex.ru:587 (TLS)
# Mail.ru: smtp.mail.ru:465 (SSL) или smtp.mail.ru:587 (TLS)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@yourdomain.com

# Email адреса для уведомлений (можно настроить через бота командой /email_settings)
