# Telegram Bot
BOT_TOKEN=your_production_bot_token
BOT_WEBHOOK_DOMAIN=https://yourdomain.com
BOT_WEBHOOK_PATH=/webhook

# Database
DATABASE_URL=sqlite:/app/data/database.sqlite
DATABASE_LOGGING=false

# Google Sheets
GOOGLE_SHEETS_ID=your_production_spreadsheet_id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=Restaurant Bot <noreply@yourdomain.com>

# Redis
REDIS_URL=redis://redis:6379

# Security
SESSION_SECRET=generate_strong_random_string_here
ADMIN_TELEGRAM_IDS=123456789,987654321

# Monitoring
HEALTH_CHECK_PORT=3000
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=strong_password_here

# Logging
LOG_LEVEL=info
LOG_ROTATION_MAX_SIZE=10m
LOG_ROTATION_MAX_FILES=14

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
S3_BUCKET=your-backup-bucket
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_REGION=eu-central-1

# Performance
NODE_OPTIONS=--max-old-space-size=512
PM2_INSTANCES=2

# Features
ENABLE_AUTO_SEND=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_MODE=false